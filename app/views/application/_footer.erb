<div class="container">
  <hr/>
  <section>
    <div class="row">
      <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 col-xs-6 col-6">
        <ul class="list-unstyled">
          <li class="heading">
            Policies
          </li>
          <li>
            <a href="<%= rules_path %>">Rules</a>
          </li>
        </ul>
      </div>
      <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 col-xs-6 col-6">
        <ul class="list-unstyled">
          <li class="heading">
            Organization
          </li>
          <li>
            <% repo = web_repo_or_first %>
            <a href="<%= repo.nil? ? repositories_path : repo %>">Development Logs</a>
          </li>
          <li>
            <a href="<%= ORG::GIT_ISSUES %>" target="_blank">Report a Bug</a>
          </li>
          <li>
            <a href="https://github.com/sponsors/BGMP" target="_blank"><i class="fa fa-heart" aria-hidden="true"></i> Sponsor</a>
