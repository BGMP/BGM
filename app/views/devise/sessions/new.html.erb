<div class="container">
  <%= render "devise/shared/error_messages", resource: resource %>

  <h3>Login</h3>
  <hr/>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-md-5">
        <div class="form-group">
          <div class="input-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => 'Email', :class => 'form-control devise-form-field' %>
          </div>
        </div>

        <div class="form-group">
          <div class="input-group">
            <%= f.password_field :password, autocomplete: "current-password", :placeholder => 'Password', :class => 'form-control devise-form-field' %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "Remember me", :class => 'devise-checkbox-text' %>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.submit "Login", :class => 'btn btn-primary' %>
        </div>
      </div>
    </div>

  <% end %>

  <%= render "devise/shared/links" %>

  <br/>
</div>
