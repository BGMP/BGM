<div class="container">
  <div class="row">
    <div class="col">
      <h3>Editing Project</h3>
    </div>
    <div class="ml-auto mb-1 mr-3">
      <% if user_signed_in? and current_user.admin? %>
        <a href="<%= project_path(@project) %>" class="btn btn-primary btn-sm">Show</a>
        <a href="<%= projects_path %>" class="btn btn-primary btn-sm">Back</a>
      <% end %>
    </div>
  </div>

  <hr class="mt-1"/>

  <%= render 'form', project: @project %>
</div>
