<div class="container">
  <div class="row">
    <div class="col">
      <h3 class="project-name"><%= @project.name %></h3>
    </div>
    <div class="ml-auto mb-1 mr-3">
      <% if user_signed_in? and current_user.admin? %>
        <a href="<%= projects_path %>" class="btn btn-primary btn-sm">Back</a>
        <a href="<%= edit_project_path(@project) %>" class="btn btn-primary btn-sm">Edit</a>
        <a href="<%= project_path(@project) %>" class="btn btn-primary btn-sm" data-confirm="Are you sure?" data-method="delete" rel="nofollow">Delete</a>
      <% end %>
    </div>
  </div>

  <hr class="mt-1"/>

  <%= render_pretty(@project.long_desc) %>

  <div class="row">
    <div class="col">
      <h5 class="project-vcs-title"><i class="fa fa-code-fork" aria-hidden="true"></i> Version Control</h5>
    </div>
    <div class="ml-auto mb-1 mr-3">
      <a href="<%= repository_path @project.slug %>" class="btn btn-primary btn-sm">Revisions</a>
    </div>
  </div>
  <hr class="mt-1"/>

  <h6><i class="fa fa-bookmark" aria-hidden="true"></i> <b>README</b></h6>

  <div class="container readme">
    <%= render_pretty(@project.readme) %>
  </div>

  <br/>

</div>
