<% if user %>
  <% if !user.thredded_anonymous? %>
    <% user_path = user_path(user) %>
    <% if user_path.blank? %>
      <span style="color: <%= user_color(user) %>"><%= user.thredded_display_name %></span>
    <% else %>
      <a style="color: <%= user_color(user) %>; font-weight: bold;" href="<%= user_path %>"><%= user.thredded_display_name %></a>
    <% end %>
  <% else %>
    <%= user.thredded_display_name %>
  <% end %>
<% else %>
  <em><%= t 'thredded.null_user_name' %></em>
<% end %>
