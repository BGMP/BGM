<div class="container">
  <h2>Website Users</h2>
  <hr class="mt-1"/>

  <% if User.any? %>
    <table class="table">
      <thead>
      <tr>
        <th scope="col" width="5%">#</th>
        <th scope="col" width="20%">Name</th>
        <th scope="col" width="75%">Registration</th>
      </tr>
      </thead>
      <tbody>
      <% @users.each do |u| %>
        <% @count += 1 %>
        <% unless u.confirmed_at.nil? %>
          <tr>
            <td><%= @count %></td>
            <td><%= render :partial => 'user_link', :locals => { :user => u } %></td>
            <td><%= pretty_time(u.confirmed_at) %></td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>

    <% paginate @users %>
  <% else %>
    <h5 align="center">No users to display</h5>
  <% end %>
</div>
